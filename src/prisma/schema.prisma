// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email         String @unique
  name          String
  lastName      String
  password      String
}


model Event {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  date          String
  startTime     String
  endTime       String
  tz            String
  location      String
  imgUrl        String
  description   String
}

model Reward {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  imgUrl        String
}